{
  "name": "note_system_api_arquitetura",
  "version": "1.0.0",
  "description": "API de Recados com Arquitetura de Dados",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:debug": "ts-node-dev --inspect=0.0.0.0:9229 --respawn --transpile-only ./src/index.ts",
    "build": "rimraf dist && tsc",
    "ts.check": "tsc --project tsconfig.json",
    "add-build": "git add dist",
    "start": "node dist/index.js",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -- -d ./src/main/config/database.config.ts",
    "migration:generate:test": "rimraf tests/shared/migrations/*.ts && cross-env NODE_ENV=test typeorm-ts-node-commonjs migration:generate -- -d ./src/main/config/database.config.ts tests/shared/migrations/TestMigration",
    "migration:create": "typeorm migration:create src/app/shared/database/migrations/CreateTable",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d ./src/main/config/database.config.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d ./src/main/config/database.config.ts",
    "migration:run:test": "cross-env NODE_ENV=test typeorm-ts-node-commonjs migration:run -d ./src/main/config/database.config.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d ./src/main/config/database.config.ts",
    "test": "jest --silent --verbose --noStackTrace --runInBand",
    "test:verbose": "jest --verbose --runInBand --detectOpenHandles",
    "test:coverage": "jest --silent --noStackTrace --runInBand --coverage",
    "test:watch": "jest --silent --noStackTrace --runInBand --watchAll",
    "test:integration": "cross-env NODE_ENV=test jest -c jest.integration.config.ts --silent --noStackTrace --runInBand",
    "test:integration:verbose": "cross-env NODE_ENV=test jest -c jest.integration.config.ts --verbose --runInBand --detectOpenHandles",
    "test:integration:coverage": "cross-env NODE_ENV=test jest -c jest.integration.config.ts --silent --noStackTrace --runInBand --coverage",
    "test:integration:watch": "cross-env NODE_ENV=test jest -c jest.integration.config.ts --silent --noStackTrace --runInBand --watchAll",
    "test:unit": "jest -c jest.unit.config.ts --silent --noStackTrace --runInBand",
    "test:unit:verbose": "jest -c jest.unit.config.ts --verbose --runInBand --detectOpenHandles",
    "test:unit:coverage": "jest -c jest.unit.config.ts --silent --noStackTrace --runInBand --coverage",
    "test:unit:watch": "jest -c jest.unit.config.ts --silent --noStackTrace --runInBand --watchAll",
    "test:setup": "rimraf database.sqlite3 && npm run migration:generate:test && npm run migration:run:test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.14.0",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.12",
    "cross-env": "^7.0.3",
    "sqlite3": "^5.1.6",
    "ts-jest": "^29.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "ioredis": "^5.3.1",
    "jest": "^29.5.0",
    "pg": "^8.9.0",
    "reflect-metadata": "^0.1.13",
    "supertest": "^6.3.3",
    "typeorm": "^0.3.10"
  }
}
